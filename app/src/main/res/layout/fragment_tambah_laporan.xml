<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">

    <LinearLayout
        android:padding="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnback"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/arrow_black"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jua"
            android:textSize="25dp"
            android:textColor="#333333"
            android:text="Tambah Laporan" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btnAddPhoto"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile_frame"
        android:layout_width="200dp"
        android:layout_height="140dp">


        <ImageView
            android:id="@+id/previewPhoto"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/keluhan" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/color2"
                    android:fontFamily="@font/jua"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul Pengaduan"/>
                <EditText
                    android:id="@+id/judul"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/color2"
                    android:fontFamily="@font/jua"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"/>
                <EditText
                    android:id="@+id/deskripsi"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/color2"
                    android:fontFamily="@font/jua"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"/>
                <EditText
                    android:id="@+id/tanggal"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/color2"
                    android:fontFamily="@font/jua"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"/>
                <EditText
                    android:id="@+id/nama"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/color2"
                    android:fontFamily="@font/jua"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Kamar"/>
                <EditText
                    android:id="@+id/nokamar"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnkirim"
                android:padding="10dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/jua"
                android:backgroundTint="@color/color2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kirim"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>